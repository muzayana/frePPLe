<?xml version="1.0" encoding="UTF-8" ?>
{% load i18n %}{% load l10n %}{% localize off %}
<chart dateFormat='yyyy/mm/dd' showTaskNames='0' ganttWidthPercent='75'
  gridBorderAlpha='100' canvasBorderColor='333333' canvasBorderThickness='0'
  hoverCapBgColor='FFFFFF' hoverCapBorderColor='333333' extendcategoryBg='0'
  ganttLineColor='0d0d0d0' ganttLineAlpha='20' baseFontColor='333333'
  gridBorderColor='0d0d0d0'  animation='0'>

<categories bgColor='0d0d0d0' fontColor='666666' >
{% for i in buckets %}<category start='{{ i.start|date:"Y/m/d" }}' end='{{ i.end|date:"Y/m/d" }}' name='{{i.name}}' />
{% endfor %}</categories>

<processes positionInGrid='right' align='center' headerText='{% filter force_escape %}{% trans 'operation' %}{% endfilter %}'
  bgcolor='edf3fe' fontColor='666666'
  headerbgColor='0d0d0d0' headerFontColor='666666' >
{% for i in objectlist1 %}<process Name='{% filter force_escape %}{{i.operation}}{% endfilter %}' id='{{ i.id }}' align='left'/>
{% endfor %}</processes>

{% comment %}
<dataTable fontColor='333333' headerFontColor='000000' headerFontSize='11' >
<dataColumn headerbgColor='333333'
  headerAlign='left' headerfontcolor='99cc00' bgColor='99cc00'
  headerText='{% filter force_escape %}{% trans 'operation' %}{% endfilter %}' align='left' bgAlpha='65'>
{% for i in objectlist1 %}<text label='{% filter force_escape %}{{i.operation}}{% endfilter %}'/>
{% endfor %}</dataColumn>
</dataTable>
{% endcomment %}

<tasks>
{% for i in objectlist1 %}<task hoverText='{% filter force_escape %}{{i.operation}}, {{i.quantity|floatformat:0}}, {{i.percent_used|floatformat:1 }}%{% endfilter %}' name='{% filter force_escape %}{{i.operation}}{% endfilter %}' processId='{{ i.id }}' start='{{ i.startdate|date:"Y/m/d" }}' end='{{ i.enddate|date:"Y/m/d" }}' id='{{ i.id }}' color='99cc00' alpha='60'  />
{% endfor %}</tasks>

<connectors>
{% for i in links %}<connector fromTaskId='{{ i.from }}' toTaskId='{{ i.to }}' color='99cc00' thickness='1' fromTaskConnectStart='1' toTaskConnectStart='0' />
{% endfor %}</connectors>

<milestones>
{% for i in objectlist1 %}{% if i.due %}<milestone toolText='due {{i.due}}' date='{{i.due|date:"Y/m/d"}}' taskId='{{i.id}}' radius='5' color='333333' shape='Star' numSides='5' borderThickness='1'/>
{% endif %}{% endfor %}</milestones>

{% if todayline %}
<trendlines>
<line start='{{ todayline|date:"Y/m/d" }}' displayValue='{% filter force_escape %}{% trans 'Today' %}{% endfilter %}' color='666666' isTrendZone='0' thickness='2'/>
</trendlines>
{% endif %}

{% endlocalize %}
</chart>
